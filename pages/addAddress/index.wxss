@import '../../styles/weui.wxss';


page{
  background-color: #eeeeee;
}
/* 整个 */
.weui-cells{
  width: 95%;
  margin: 10rpx auto;
  background-color: white;
}
.weui-cells:before{
  top:0;
  border-top:1rpx solid white;
  }
.weui-cell{
  line-height: 3.5rem;
  padding:0;
  display: flex;
  /* justify-content: space-between; */
 
}



.weui-cells:after{
  bottom:0;border-bottom:1rpx solid white
}

/* 下拉框 */
.weui-select{
  font-size: 30rpx;
}
picker{
  font-size: 38rpx;
}


/* 输入框 */
.weui-label{
  text-align: center;
}

.weui-btn{
  margin-top: 38rpx;
  border-radius: 50rpx;
  width: 60%;
  background-color: var(--themeColor);
  color: white;
}

/*自定义toast*/
.toast_content_box {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 999;
  
}
.toast_content {
  width: 70%;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  margin-top: -800rpx;
 
}
.toast_content_text {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}